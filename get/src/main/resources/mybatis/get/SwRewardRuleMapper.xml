<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.get.dao.SwRewardRuleDao">

    <select id="get" resultType="com.get.domain.SwRewardRuleDO">
        select `tid`,`code`,`name`,`status`,`type`,`remark`,`create_date`,`update_date`,`del_flag`        from t_sw_reward_rule where tid = #{value}
    </select>

    <select id="list" resultType="com.get.domain.SwRewardRuleDO">
        select `tid`,`code`,`name`,`status`,`type`,`remark`,`create_date`,`update_date`,`del_flag`        from t_sw_reward_rule
        <where>
                            <if test="tid != null and tid != ''">and tid =
                    #{tid}
                </if>
                            <if test="code != null and code != ''">and code =
                    #{code}
                </if>
                            <if test="name != null and name != ''">and name =
                    #{name}
                </if>
                            <if test="status != null and status != ''">and status =
                    #{status}
                </if>
                            <if test="type != null and type != ''">and type =
                    #{type}
                </if>
                            <if test="remark != null and remark != ''">and remark =
                    #{remark}
                </if>
                            <if test="createDate != null and createDate != ''">and create_date =
                    #{createDate}
                </if>
                            <if test="updateDate != null and updateDate != ''">and update_date =
                    #{updateDate}
                </if>
                            <if test="delFlag != null and delFlag != ''">and del_flag =
                    #{delFlag}
                </if>
                    </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by tid desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="count" resultType="int">
        select count(*) from t_sw_reward_rule
        <where>
                            <if test="tid != null and tid != ''">and tid =
                    #{tid}
                </if>
                            <if test="code != null and code != ''">and code =
                    #{code}
                </if>
                            <if test="name != null and name != ''">and name =
                    #{name}
                </if>
                            <if test="status != null and status != ''">and status =
                    #{status}
                </if>
                            <if test="type != null and type != ''">and type =
                    #{type}
                </if>
                            <if test="remark != null and remark != ''">and remark =
                    #{remark}
                </if>
                            <if test="createDate != null and createDate != ''">and create_date =
                    #{createDate}
                </if>
                            <if test="updateDate != null and updateDate != ''">and update_date =
                    #{updateDate}
                </if>
                            <if test="delFlag != null and delFlag != ''">and del_flag =
                    #{delFlag}
                </if>
                    </where>
    </select>

    <insert id="save" parameterType="com.get.domain.SwRewardRuleDO">
        insert into t_sw_reward_rule
        (
                                    `tid`, 
                                                `code`, 
                                                `name`, 
                                                `status`, 
                                                `type`, 
                                                `remark`, 
                                                `create_date`, 
                                                `update_date`, 
                                                `del_flag`
                            )
        values
        (
                                    #{tid}, 
                                                #{code}, 
                                                #{name}, 
                                                #{status}, 
                                                #{type}, 
                                                #{remark}, 
                                                #{createDate}, 
                                                #{updateDate}, 
                                                #{delFlag}
                            )
    </insert>

    <update id="update" parameterType="com.get.domain.SwRewardRuleDO">
        update t_sw_reward_rule
        <set>
                                                                            <if test="code != null">`code` = #{code
                        }, </if>
                                                                <if test="name != null">`name` = #{name
                        }, </if>
                                                                <if test="status != null">`status` = #{status
                        }, </if>
                                                                <if test="type != null">`type` = #{type
                        }, </if>
                                                                <if test="remark != null">`remark` = #{remark
                        }, </if>
                                                                <if test="createDate != null">`create_date` = #{createDate
                        }, </if>
                                                                <if test="updateDate != null">`update_date` = #{updateDate
                        }, </if>
                                                                <if test="delFlag != null">`del_flag` = #{delFlag
                        }</if>
                                    </set>
        where tid = #{tid}
    </update>

    <delete id="remove">
        delete from t_sw_reward_rule where tid = #{value}
    </delete>

    <delete id="batchRemove">
        delete from t_sw_reward_rule where tid in
        <foreach item="tid" collection="array" open="(" separator="," close=")">
            #{tid}
        </foreach>
    </delete>

</mapper>